@model IEnumerable<Category>
@{
    ViewData["Title"]="List";
}
<div class="container mt-2">
            <h2>Category List</h2>
        <hr/>
    <div class="row">
        <div class="col">
 @if (Model.Count()>0)
           {
               <table class="table table-bordered table-striped">
                   <thead>
                       <tr>
                       <th>Id</th>
                       <th>Name</th>
                       <th></th>
                       </tr>
             
                   </thead>
                   <tbody>
                       @foreach (var item in Model)
                       {
                           <tr>
                           <td>@item.CategoryId</td>
                           <td>@item.Name</td>
                           <td>
                            <a class="btn btn-primary btn-sm" href="~/Category/AddorUpdate/@item.CategoryId">
                               Details
                           </a>
                            <a class="btn btn-danger btn-sm" href="~/Category/Delete/@item.CategoryId">
                               Delete
                           </a>
                           </td>
                           </tr>
                   
                       }
                   </tbody>
               </table>
           }
           else{
                <div class="alert alert-danger">
                    Eklenmemi≈ütir
                </div>
           }
        </div>
    </div>
</div>

