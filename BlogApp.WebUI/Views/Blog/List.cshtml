@model IEnumerable<Blog>
@{
    ViewData["Title"]="List";
}
<div class="container mt-2">
    <h2>Blog List</h2>
    <div class="row">
        <div class="col">
           @if (Model.Count()>0)
           {
               <table class="table table-bordered table-striped">
                   <thead>
                       <tr>
                       <th>Id</th>
                       <th>Image</th>
                       <th>Title</th>
                       <th>Date</th>
                       <th>is Approved</th>
                       <th></th>
                       </tr>
             
                   </thead>
                   <tbody>
                       @foreach (var item in Model)
                       {
                           <tr>
                           <td>@item.BlogId</td>
                           <td><img src="~/img/@item.Image" width="100" alt=""></td>
                           <td>@item.Title</td>
                           <td>@item.Date</td>
                           <td>@if(item.isApproved)
                               {
                               <i class="fa fa-check" aria-hidden="true"></i>
                               }
                               else
                               {
                               <i class="fa fa-times" aria-hidden="true"></i>
                               }
                               </td>
                           <td>
                            <a class="btn btn-primary btn-sm" href="~/Blog/addorupdate/@item.BlogId">
                               Details
                           </a>
                            <a class="btn btn-danger btn-sm" href="~/Blog/delete/@item.BlogId">
                               Delete
                           </a>
                           </td>
                           </tr>
                   
                       }
                   </tbody>
               </table>
           }
           else{
                <div class="alert alert-danger">
                    Eklenmemi≈ütir
                </div>
           }
        </div>
    </div>
</div>